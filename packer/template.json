{
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
        "username": "bascht",
        "password": "bascht",
        "build_version": "{{env `ATLAS_BUILD_GITHUB_TAG`}}"
    },
    "push": {
        "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "vcs": true,
        "base_dir": "packer"
    },
    "provisioners": [
        {
          "type": "file",
          "source": "ansible/requirements.yml",
          "destination": "/tmp/requirements.yml"
        },
        {
            "type": "shell",
            "scripts": [
                "packer/scripts/base.sh",
                "packer/scripts/vagrant.sh",
                "packer/scripts/ansible.sh"
            ],
            "override": {
                "qemu": {
                    "execute_command": "echo '{{user `password`}}'|sudo -S bash '{{.Path}}'"
                }
            }
        },
        {
            "type": "ansible-local",
            "playbook_dir": "ansible",
            "playbook_file": "ansible/playbook.yml",
            "group_vars": "ansible/group_vars",
            "extra_arguments": [
                "--become-user=root"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "packer/scripts/cleanup.sh"
            ],
            "override": {
                "qemu": {
                    "execute_command": "echo '{{user `password`}}'|sudo -S bash '{{.Path}}'"
                }
            }
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "iso_url": "http://de.releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
            "iso_checksum": "70db69379816b91eb01559212ae474a36ecec9ef",
            "iso_checksum_type": "sha1",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "sudo shutdown -P now",
            "disk_size": 20000,
            "format": "qcow2",
            "headless": false,
            "accelerator": "kvm",
            "http_directory": "packer/http",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "vm",
            "net_device": "virtio-net",
            "disk_interface": "virtio",
            "boot_wait": "5s",
            "boot_command": [
                "<esc><f6><esc>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",

                "initrd=/install/initrd.gz ",
                "auto=true ",
                "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "language=en ",
                "country=US ",
                "locale=en_US.UTF-8 ",
                "hostname={{ .Name }} ",
                "console-setup/ask_detect=false ",
                "keyboard-configuration/layoutcode=de ",
                "vga=788 noprompt quiet --<enter>"
            ]
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false
        },
         {
             "type": "atlas",
             "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
             "artifact_type": "vagrant.box",
             "metadata": {
                 "provider": "libvirt",
                 "version": "{{user `build_version`}}"
             }
         }
        ]
    ]
}
